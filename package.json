{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Italo Izaac <italoiz.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.js --ignore __tests__",
    "dev:docs": "npm run build:docs -- -s",
    "test": "cross-env NODE_ENV=test jest",
    "build:docs": "npx aglio -i docs/api/index.apib -t onlicar --theme-full-width --theme-template triple -o docs/api/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "docs/**/*.(apib,html)": [
      "npm run build:docs",
      "git add"
    ],
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "__tests__/**/*.js": [
      "eslint --fix",
      "cross-env NODE_ENV=test jest --bail --findRelatedTests --runInBand",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "aglio": "^2.3.0",
    "aglio-theme-onlicar": "^1.6.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.0",
    "yup": "^0.27.0"
  }
}
